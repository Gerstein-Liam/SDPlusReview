<UserControl x:Class="WPF.Views.DashboardItems.PropertyEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                     xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             xmlns:local="clr-namespace:WPF.ViewModels.DashboardItems"
             d:DataContext="{d:DesignInstance local:PropertyEditViewModel}" 
                 xmlns:converters="clr-namespace:WPF.Converters"
                          xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:InverseBooleanToInvisibilityConverter x:Key="InverseBooleanToInvisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Border CornerRadius="10" BorderThickness="0.5" BorderBrush="{StaticResource BrushPrimary2}" Background="White" Padding="5">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"   >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="250"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Label Content="{Binding Action}" FontWeight="Bold" HorizontalAlignment="Stretch"  Margin="0 0 0 10" />
                <TabControl Grid.Row="1"  VerticalAlignment="Stretch"  >


                    <TabItem Header="Coordonnées" >
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="NOM" Grid.Row="0"/>
                            <TextBox Width="150" Text="{Binding PropertyName,UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" FontStyle="Italic" FontWeight="Light" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left" />
                            <Label Content="ADRESSE" Grid.Row="1"/>
                            <TextBlock  Text="{Binding Adress}" Grid.Column="1"  FontWeight="Light" Grid.Row="1" FontStyle="Italic"  VerticalAlignment="Center" HorizontalAlignment="Left" />
                            <Label Content="ZIP" Grid.Row="2"/>
                            <TextBlock  Text="{Binding Zip}"  Grid.Column="1" Grid.Row="2" FontWeight="Light" FontStyle="Italic" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        </Grid>

                    </TabItem>
                    <TabItem Header="Propriétaires" Visibility="{Binding  ShowTransferePanel,Converter={StaticResource InverseBooleanToInvisibilityConverter}}" >
                        <Grid VerticalAlignment="Center" Background="LightBlue">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Actuel" Grid.Row="0" Grid.Column="0"/>
                            <Label Content="Transféré a" Grid.Row="0" Grid.Column="1"/>
                            <Label Content="{Binding CurrentOwnerName}" Grid.Row="1" Grid.Column="0"/>
                            <ComboBox  ItemsSource="{Binding TargetOwner}" DisplayMemberPath="OwnerName"  SelectedItem="{Binding SelectedTargetOwner}" Grid.Row="1"  Grid.Column="1">

                                <!--<ComboBoxItem Content="{Binding owner }"></ComboBoxItem>-->
                            </ComboBox>
                        </Grid>
                        
                        
                    </TabItem>
                    <TabItem Header="Ensoleillement" >
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="150"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="55"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="22"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding JanTemp}" HorizontalAlignment="Center" Grid.Column="1"/>
                                <TextBlock Text="{Binding FebTemp}" HorizontalAlignment="Center"  Grid.Column="2"/>
                                <TextBlock Text="{Binding MarsTemp}" HorizontalAlignment="Center"  Grid.Column="3"/>
                                <TextBlock Text="{Binding AvrTemp}" HorizontalAlignment="Center"  Grid.Column="4"/>
                                <TextBlock Text="{Binding MaiTemp}" HorizontalAlignment="Center"  Grid.Column="5"/>
                                <TextBlock Text="{Binding JunTemp}" HorizontalAlignment="Center"  Grid.Column="6"/>
                                <TextBlock Text="{Binding JulTemp}" HorizontalAlignment="Center"  Grid.Column="7"/>
                                <TextBlock Text="{Binding AugTemp}" HorizontalAlignment="Center"  Grid.Column="8"/>
                                <TextBlock Text="{Binding SepTemp}" HorizontalAlignment="Center"  Grid.Column="9"/>
                                <TextBlock Text="{Binding OctTemp}" HorizontalAlignment="Center"  Grid.Column="10"/>
                                <TextBlock Text="{Binding NovTemp}"  HorizontalAlignment="Center" Grid.Column="11"/>
                                <TextBlock Text="{Binding DecTemp}"  HorizontalAlignment="Center" Grid.Column="12"/>
                            </Grid>
                            <Grid Grid.Row="1" Margin="0 0 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="55"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="22"/>
                                </Grid.ColumnDefinitions>
                                <Slider Orientation="Vertical" Value="{Binding JanTemp}" HorizontalAlignment="Center" Minimum="30" Maximum="100" Grid.Column="1"  />
                                <Slider Orientation="Vertical" Value="{Binding FebTemp}" HorizontalAlignment="Center" Minimum="30" Maximum="100" Grid.Column="2"  />
                                <Slider Orientation="Vertical" Value="{Binding MarsTemp}" HorizontalAlignment="Center" Minimum="30" Maximum="100" Grid.Column="3"  />
                                <Slider Orientation="Vertical" Value="{Binding AvrTemp}" HorizontalAlignment="Center" Minimum="30" Maximum="100" Grid.Column="4"  />
                                <Slider Orientation="Vertical" Value="{Binding MaiTemp}" HorizontalAlignment="Center" Minimum="30" Maximum="100" Grid.Column="5"  />
                                <Slider Orientation="Vertical" Value="{Binding JunTemp}" HorizontalAlignment="Center" Minimum="30" Maximum="100" Grid.Column="6"  />
                                <Slider Orientation="Vertical" Value="{Binding JulTemp}" HorizontalAlignment="Center" Minimum="30" Maximum="100" Grid.Column="7"  />
                                <Slider Orientation="Vertical" Value="{Binding AugTemp}" HorizontalAlignment="Center" Minimum="30" Maximum="100" Grid.Column="8"  />
                                <Slider Orientation="Vertical" Value="{Binding SepTemp}" HorizontalAlignment="Center" Minimum="30" Maximum="100" Grid.Column="9"  />
                                <Slider Orientation="Vertical" Value="{Binding OctTemp}" HorizontalAlignment="Center" Minimum="30" Maximum="100" Grid.Column="10"  />
                                <Slider Orientation="Vertical" Value="{Binding NovTemp}" HorizontalAlignment="Center" Minimum="30" Maximum="100" Grid.Column="11"  />
                                <Slider Orientation="Vertical" Value="{Binding DecTemp}" HorizontalAlignment="Center" Minimum="30" Maximum="100" Grid.Column="12"  />
                            </Grid>
                            <Grid Grid.Row="2" Margin="0 0 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="55"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="22"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="JAN" Grid.Column="1"  HorizontalAlignment="Center" />

                                <Label Content="FEV" Grid.Column="2"  HorizontalAlignment="Center" />
                                <Label Content="MAR" Grid.Column="3"  HorizontalAlignment="Center" />
                                <Label Content="AVR" Grid.Column="4"  HorizontalAlignment="Center" />
                                <Label Content="MAI" Grid.Column="5"  HorizontalAlignment="Center" />
                                <Label Content="JUIN" Grid.Column="6"  HorizontalAlignment="Center" />
                                <Label Content="JUIL" Grid.Column="7"  HorizontalAlignment="Center" />
                                <Label Content="AOUT" Grid.Column="8"  HorizontalAlignment="Center" />
                                <Label Content="SEP" Grid.Column="9"  HorizontalAlignment="Center" />
                                <Label Content="OCT" Grid.Column="10"  HorizontalAlignment="Center" />
                                <Label Content="NOV" Grid.Column="11"  HorizontalAlignment="Center" />
                                <Label Content="DEC" Grid.Column="12"  HorizontalAlignment="Center" />

                            </Grid>

                        </Grid>
                    </TabItem>
                    <TabItem Header="Conduites" >
                        <Grid >
                            <Label Content="TODO" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        </Grid>
                        
                    </TabItem>
                    <TabItem Header="Documents" >

                        <Grid >
                            <Label Content="TODO" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        </Grid>

                    </TabItem>
                </TabControl>
                <Button Content="{materialIcons:MaterialIconExt Kind=Approval}" Height="30" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" Command="{Binding ValidedBt}" Grid.Row="2"  />

            </Grid>
        </Border>
    </Grid>
</UserControl>