<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Color x:Key="ColorPrimary1">#00A0DF</Color>
    <Color x:Key="ColorPrimary2">#181C21</Color>
    <Color x:Key="ButtonColorIdle">#1CBB73</Color>
    <Color x:Key="ButtonColorOnOver">#8DDDB9</Color>
    <Color x:Key="ButtonColorOnPressed">#1CB2BA</Color>
    <Color x:Key="BorderColor">#E8E8E9</Color>

    <SolidColorBrush x:Key="BrushPrimary1" Color="{StaticResource ColorPrimary1}"/>
    <SolidColorBrush x:Key="BrushPrimary2" Color="{StaticResource ColorPrimary2}"/>
    <SolidColorBrush x:Key="BrushButtonIdle" Color="{StaticResource ButtonColorIdle}"/>
    <SolidColorBrush x:Key="BrushButtonOver" Color="{StaticResource ButtonColorOnOver}"/>
    <SolidColorBrush x:Key="BrushButtonPressed" Color="{StaticResource ButtonColorOnPressed}"/>

    <SolidColorBrush x:Key="BrushBorderColor" Color="{StaticResource BorderColor}"/>

    <Style x:Key="ButtonContainer" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BrushBorderColor}" />
    
 
    </Style>



</ResourceDictionary>