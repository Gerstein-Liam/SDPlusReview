<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="ColorPrimary1">#00A0DF</Color>
    <Color x:Key="ColorPrimary2">#181C21</Color>
    <Color x:Key="ButtonColorIdle">#1CBB73</Color>
    <Color x:Key="ButtonColorOnOver">#8DDDB9</Color>
    <Color x:Key="ButtonColorOnPressed">#1CB2BA</Color>
    <Color x:Key="BorderColor">#E8E8E9</Color>
    <SolidColorBrush x:Key="BrushPrimary1" Color="{StaticResource ColorPrimary1}"/>
    <SolidColorBrush x:Key="BrushPrimary2" Color="{StaticResource ColorPrimary2}"/>
    <SolidColorBrush x:Key="BrushButtonIdle" Color="{StaticResource ButtonColorIdle}"/>
    <SolidColorBrush x:Key="BrushButtonOver" Color="{StaticResource ButtonColorOnOver}"/>
    <SolidColorBrush x:Key="BrushButtonPressed" Color="{StaticResource ButtonColorOnPressed}"/>
    <SolidColorBrush x:Key="BrushBorderColor" Color="{StaticResource BorderColor}"/>
    <Style x:Key="ButtonContainer" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BrushBorderColor}" />
    </Style>
    <Style TargetType="TabControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabControl}">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TabPanel x:Name="HeaderPanel"
                                                             Grid.Row="0"
                                                             Panel.ZIndex="1"
                                                             Margin="0,0,4,-1"
                                                             IsItemsHost="True"
                                                        
                                                             Background="White" />
                        <Border x:Name="Border"
                                                               Grid.Row="1"
                                                               BorderThickness="1"
                                                               CornerRadius="2"
                                                                                                 Background="White"
                                                               >
                            <ContentPresenter x:Name="PART_SelectedContentHost"
                       Margin="4"
                       ContentSource="SelectedContent" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="{x:Type TabItem}">
        <Setter Property="Background" Value="White"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabItem}">
                    <Grid x:Name="Root">
                        <Border x:Name="Border"
                                    Margin="0,0,-4,0"
                                    BorderThickness="0.1,0.1,0.1,0.1"
                                    CornerRadius="0,0,0,0"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="LightGray"
                                
                                >
                            <ContentPresenter x:Name="ContentSite"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              ContentSource="Header"
                              Margin="12,2,12,2"
                              RecognizesAccessKey="True" />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Panel.ZIndex" Value="100" />
                            <Setter Property="FontStyle" Value="Normal" />
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Background" Value="LightGreen"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>