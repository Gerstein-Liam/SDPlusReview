<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
                    xmlns:local="clr-namespace:WPF.CustomArcGisLibrary.ExampleUsage"
                     xmlns:arcgiscustomlib="clr-namespace:WPF.CustomArcGisLibrary.Lib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type local:MapViewCustomControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:MapViewCustomControl}">
                    <Border Background="{TemplateBinding Background}"
                          BorderBrush="{TemplateBinding BorderBrush}"
                          BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <arcgiscustomlib:DrawableMapViewBaseControl x:Name="DrawableMapView"/>
                            <Grid  VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="1">
                                    <Border x:Name="MainPanel"  Panel.ZIndex="2" CornerRadius="4"  HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10 0 60 10">
                                        <Grid  Visibility="Visible" >
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="60"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Row="0" Grid.Column="0" Opacity="0.95" Margin="10" Background="White" CornerRadius="10" Padding="5">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Grid Grid.Row="0" >
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBox x:Name="NewExploitationName" Opacity="1"  Text="NAME..." VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="0"/>
                                                            <Button Grid.Column="0" Grid.Row="0" x:Name="DrawNewExploitationBt" Content="{materialIcons:MaterialIconExt Kind=Draw}" />
                                                            <Button  x:Name="SaveNewExploitationBt" Grid.Row="0" Grid.Column="2" Content="{materialIcons:MaterialIconExt Kind=ContentSave}" />
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                                <Border Grid.Row="0" Grid.Column="1"  Margin="10" Background="White" CornerRadius="10" Padding="5">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Grid Grid.Row="0" >
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Label x:Name="editStatusLabel" Content="ON" Grid.Row="0" Grid.Column="0"/>
                                                            <Button  Content="{materialIcons:MaterialIconExt Kind=Edit}" Grid.Row="0" Grid.Column="1" x:Name="EditExploitationBt"/>
                                                            <Button  Content="{materialIcons:MaterialIconExt Kind=ContentSave}" Grid.Row="1" Grid.Column="2"/>
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                                <Border Grid.Row="0" Grid.Column="2"   Opacity="0.95" CornerRadius="10" Background="White" Padding="5" Margin="10">
                                                    <Grid >
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Grid Grid.Row="0" >
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Button Content="{materialIcons:MaterialIconExt Kind=Delete}"  Background="Orange" Grid.Row="0" Grid.Column="0" x:Name="DeleteExploitationBt" />
                                                        </Grid>
                                                        <StackPanel Orientation="Vertical">
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                                <Border Grid.Row="0"  Grid.Column="3" Opacity="0.0" Background="White" CornerRadius="10"   Margin="10">
                                                    <Grid>
                                                        <Button  Content="DEBUG CONTROL" Background="Orange" Grid.Row="0" x:Name="DebugBt" Grid.Column="1" />
                                                    </Grid>
                                                </Border>
                                            </Grid>
                                            <StackPanel Orientation="Horizontal" Visibility="Hidden">
                                                <StackPanel Orientation="Horizontal" Margin="10" x:Name="CreatePanel">
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="10 " x:Name="EditPanel" >
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>